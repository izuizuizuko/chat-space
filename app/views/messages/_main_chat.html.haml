        -#     .chat-main__list__box__info__date
              
        -#   .chat-main__list__box__text
        

      .chat-main__message
        = form_for [@group, @message],html: {class:"chat-main__message__box"} do |f|
          .chat-main__message__box__tpform
            = f.text_field :content, class: 'chat-main__message__box__tpform__text', placeholder: 'type a message'
            = f.label :image, class: 'chat-main__message__box__tpform__picture' do
              = icon('fas', 'image',)
              = f.file_field :image, class: 'chat-main__message__box__tpform__picture__file'
          = f.submit 'Send', class: 'chat-main__message__box__btn' 








  








