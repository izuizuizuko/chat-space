
%l
  %body
    .chat-main
      .chat-main__info
        .chat-main__info__box
          .chat-main__info__box__left
            .chat-main__info__box__left__name
              = @group.name
            .chat-main__info__box__left__member
              .chat-main__info__box__left__member__list
                member:
              .chat-main__info__box__left__member__name
                - @group.users.each do |user|
                  = user.name
          .chat-main__info__box__edit
            = link_to edit_group_path(@group) do
              Edit


      .chat-main__list
        = render @messages
        -# .chat-main__list__box
